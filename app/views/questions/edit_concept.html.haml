.page-edit-concept
  %h1 编辑概念 #{@concept.name}
  .nav
    = link_to "首页", questions_path
    >
    = link_to @net.name, net_questions_path(:id => "javascript")
    >
    = link_to @node.set.name, set_questions_path(:id => @node.set.id, :net_id => @net.id)
    >
    = link_to "#{@node.name}-概念管理", concepts_questions_path(:id => @node.id, :net_id => @net.id)
    >
    = link_to "#{@concept.name}-编辑", edit_concept_questions_path(:id => @concept.id), :class => "current"
  .edit-form
    = render "concept_form"
