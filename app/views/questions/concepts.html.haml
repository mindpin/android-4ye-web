.page-question-set
  %h1 #{@node.name} - 概念管理
  .ops 
    = link_to "返回上一级", set_questions_path(:id => @node.set.id, :net_id => @net.id)
  .concepts
    - @concepts.each do |concept|
      .concept{:style => "border-bottom:1px solid #ccc;margin-bottom:4px;width:640px;"}
        .title{:style => "background:#ddd;"}= concept.name 
        .desc= concept.desc
        = link_to "编辑", edit_concept_questions_path(:id => concept.id)
        = link_to "删除", destroy_concept_questions_path(:id => concept.id), :method => :delete, :confirm => "确认删除?"

  .new-concept
    = render "concept_form"
