- url = @update_url ? @update_url : create_concept_admin_questions_path
= form_for @concept, :url => url do |f|
  = f.hidden_field :knowledge_node_id
  = f.hidden_field :knowledge_net_id
  .control
    = f.label :name, "概念"
    = f.text_field :name

  .control
    = f.label :desc, "描述"
    = f.text_area :desc

  .control
    = f.submit "提交"

