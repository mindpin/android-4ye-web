.page-question-set
  %h1.title #{@node.name} - 概念管理
  .nav
    = link_to "首页", admin_questions_path
    >
    = link_to @net.name, net_admin_questions_path(:id => @net.id)
    >
    = link_to @node.set.name, set_admin_questions_path(:id => @node.set.id, :net_id => @net.id)
    >
    = link_to "#{@node.name}-概念管理", concepts_admin_questions_path(:id => @node.id, :net_id => @net.id), :class => "current"
  .items.concepts
    - @concepts.each do |concept|
      .item
        .title
          = concept.name 
          .ops
            - edit = link_to "编辑", edit_concept_admin_questions_path(:id => concept.id)
            - delete = link_to "删除", destroy_concept_admin_questions_path(:id => concept.id), :method => :delete, :confirm => "确定删除?"
            = edit + delete
        .desc= concept.desc

  .new-concept.form
    = render "concept_form"
